@model SquareHook.Membership.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}


@section title {    
    <h3 class="title">
        <i class="icon-user"></i>
        Change Password
    </h3>
    <h5>
        <span>
            Use the form below to change your password. 
        </span>
    </h5>
}

@section breadcrumbs {
<div id="breadcrumbs">
    <div class="breadcrumb-button blue">
        <span class="breadcrumb-label"><i class="icon-home"></i> Home</span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>

    <div class="breadcrumb-button">
        <span class="breadcrumb-label">
        <i class="icon-user"></i> Change Password
        </span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>
</div>
}

<div class="alert">
    New passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
</div>

<div class="row">
  <div class="col-md-12">

    <div class="box">
      <div class="box-header">
        <span class="title"><i class="icon-warning-sign"></i> Change Password</span>
      </div>

      <div class="box-content">

        <form class="form-horizontal fill-up validatable" method="post">

          <div class="padded">
            @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.", new { @class="alert alert-warning" })

            <div class="form-group">
              <label class="control-label col-lg-2">Old Password</label>
              <div class="col-lg-10">
                @Html.PasswordFor(m => m.OldPassword, new Dictionary<string, object> { 
                    { "class", "validate[required,minSize[4]]" },
                    { "data-prompt-position", "topLeft" }  
                })
                @Html.ValidationMessageFor(m => m.OldPassword)
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-lg-2">New Password</label>
              <div class="col-lg-10">
                @Html.PasswordFor(m => m.NewPassword, new Dictionary<string, object> { 
                    { "class", "validate[required,minSize[4]]" },
                    { "data-prompt-position", "topLeft" }  
                })
                @Html.ValidationMessageFor(m => m.NewPassword)
                <span class="help-block note"><i class="icon-warning-sign"></i> Please use a secure password.</span>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-lg-2">Confirm Password</label>
              <div class="col-lg-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new Dictionary<string, object> { 
                    { "class", "validate[required,equals[NewPassword],minSize[4]]" },
                    { "data-prompt-position", "topLeft" }  
                })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
              </div>
            </div>

          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-blue">Update password</button>
            <button type="reset" class="btn btn-default">Cancel</button>
          </div>
        </form>

      </div>
    </div>

  </div>
</div>
